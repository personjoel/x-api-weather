extends layout

block content
  .container
    h1.heading= title
    p Welcome to #{title}
    form
      input(type="radio", id="celsius" name="unit", value="1", checked="checked")
      | Celsius
      input(type="radio", id="fahrenheit" name="unit", value="0")
      | Fahrenheit
      br
      br
      input(type="text", id="textcity", name="textcity", placeholder="Enter a city", onfocus="this.value=''")
      input(type="submit", value="Submit")
    h4#errmsg
  div.container
    ul#cities